<h3 class="text-center">
    <input class="task-title" value="{{title}}" {{#if is_creator}}{{else}}disabled="disabled"{{/if}}/>
</h3>

<div class="row release-date">
    <div class='col-md-4 col-md-offset-4'>
        <div class="form-group text-center">
            <label>Дедлайн</label>
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control task-release-date"/>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="row assigned-to"></div>

<div class="row status-panel">
    <div class="col-md-12 text-center">
        Состояние
        {{{status_html}}}
    </div>
</div>

<div class="row change-status-panel">
    <div class="col-md-12 text-center">
        <div class="btn btn-info start-btn" data-type="in_progress">Start</div>
        <div class="btn btn-info continue-btn" data-type="in_progress">Continue</div>
        <div class="btn btn-warning pause-btn" data-type="paused">Pause</div>
        <div class="btn btn-default finish-btn" data-type="finished">Finish</div>
        <div class="btn btn-danger return-btn" data-type="returned">Return</div>
        <div class="btn btn-success close-btn" data-type="closed">Close</div>
    </div>
</div>

<div class="row description-panel">
    <div class="col-md-12">
        <p>
            <textarea class="task-description" {{#if is_creator}}{{else}}disabled="disabled"{{/if}} placeholder="Описание">{{description}}</textarea>
        </p>
    </div>
</div>
